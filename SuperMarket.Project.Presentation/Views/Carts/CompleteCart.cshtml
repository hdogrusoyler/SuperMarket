@model SuperMarket.Project.Entity.Cart
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("ProductName")
                </th>
                <th>
                    @Html.DisplayName("CategoryName")
                </th>
                <th>
                    @Html.DisplayName("Amount")
                </th>
                <th>
                    @Html.DisplayName("Price")
                </th>
                <th>
                    @Html.DisplayName("StockAmount")
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.CartProducts != null)
            {
                @foreach (var item in Model.CartProducts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Category.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.StockAmount)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    <form asp-controller="Carts" asp-action="CompleteCart">
        <div class="form-group">
            <label name="PaymentTypeId" class="control-label"></label>
            <select name="PaymentTypeId" class="form-control" asp-items="ViewBag.PaymentTypeId"></select>
        </div>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Complete Payment" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>